{
	"name": "ikigai",
	"scripts": {
		"start": "dotenv -- node dist/index.js",
		"watch": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
		"dev": "npm-run-all --parallel watch playground",
		"debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
		"playground": "graphql playground",
		"build": "rimraf dist && tsc"
	},
	"dependencies": {
		"body-parser": "^1.16.0",
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.1",
		"express": "^4.14.1",
		"bcryptjs": "2.4.3",
		"graphql-yoga": "1.14.12",
		"jsonwebtoken": "8.3.0",
		"prisma-binding": "2.1.0"
	},
	"devDependencies": {
		"@types/body-parser": "^1.16.3",
		"@types/cookie-parser": "^1.3.30",
		"@types/cors": "^2.8.0",
		"@types/express": "^4.0.36",
		"@types/node": "^8.0.0",
		"@types/bcryptjs": "2.4.1",
		"dotenv-cli": "1.4.0",
		"graphql-cli": "2.16.4",
		"nodemon": "1.18.1",
		"npm-run-all": "4.1.3",
		"prisma": "1.11.1",
		"rimraf": "2.6.2",
		"ts-node": "6.2.0",
		"typescript": "2.9.2"
	}
}
