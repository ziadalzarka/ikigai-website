.bg-dark.p-5
	.container
		.row.text-light
			.col-12.col-md-3
				strong Address
				br
				br
				p.pre(*ngIf="(content$|async)?.address") {{ (content$|async)?.address }}
			.col-12.col-md-3
				strong Contacts
				br
				br
				div(*ngIf="(content$|async)?.email") Email: {{ (content$|async)?.email }}
				div(*ngIf="(content$|async)?.phone1") Phone: {{ (content$|async)?.phone1 }}
				div(*ngIf="(content$|async)?.phone2") Phone: {{ (content$|async)?.phone2 }}
			.col-12.col-md-3
				strong(*ngIf="(content$|async)?.additionalTitle") {{ (content$|async)?.additionalTitle }}
				br
				br
				div(*ngIf="(content$|async)?.additionalBody") {{ (content$|async)?.additionalBody }}
			.col-12.col-md-3.mt-4.d-flex.align-items-end.justify-content-center
				ul#social
					li.cursor-pointer(*ngIf="(content$|async)?.facebook")
						.facebook((click)="newTab('facebook')")
							a
								i.fa.fa-facebook
					li.cursor-pointer(*ngIf="(content$|async)?.linkedIn")
						.linkedin((click)="newTab('linkedIn')")
							a
								i.fa.fa-linkedin
					li.cursor-pointer(*ngIf="(content$|async)?.instagram")
						.instagram((click)="newTab('instagram')")
							a
								i.fa.fa-instagram
		.row
			.col-sm-6
				hr
				p
