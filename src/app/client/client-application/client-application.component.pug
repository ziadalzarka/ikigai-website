.bg-light.py-5
	.container.clearfix
		h1.display-4.mb-2 Send us your proposal
		p.lead We will contact you as soon as possible.
		hr
		h2 Your company
		br
		.row
			.col
				.form-group
					label Name
					input.form-control(type='text' placeholder='Company Name')
				.form-group
					label Facebook Page
					input.form-control(type='text' placeholder='https://www.facebok.com/...')
		hr
		br
		h2 Contact Information
		br
		.row
			.col
				.form-group
					label Email address
					input.form-control(type='email' placeholder='example@example.com')
				.form-group
					label Address (optional)
					input.form-control(type='text' placeholder='445 Mount Eden Road, Auckland')
				.form-group
					label Phone number (optional)
					input.form-control(type='tel' placeholder='01097543010')
		br
		h2 Media
		br
		.row
			.col-12.col-lg-6
				label Posts per month
				.form-group.range-field
					input#slider(type='range' min='30' max='120' step='10')
				label Photography
				.form-group.range-field
					input(type="range" min="20" max="100" step="5")
			.col-12.col-lg-6
				label Videos
				.form-group.range-field
					input(type="range" min="0" max="3")
				label Minutes per video
				.form-group.range-field
					input(type="range" min="1" max="5")
		br
		h2 Website
		br
		.row
			.col-12.col-lg-6
				label Do you want a website?
				br
				.d-block
					.form-check.d-inline-block
						input.form-check-input#website-rd-yes(type='radio' name='website' checked)
						label.form-check-label(for='website-rd-yes') Yes
					.form-check.d-inline-block.mx-3
						input.form-check-input#website-rd-no(type='radio' name='website')
						label.form-check-label(for='website-rd-no') No
				br
			.col-12.col-lg-6
				label Do you want have a host?
				br
				.d-block
					.form-check.d-inline-block
						input.form-check-input#host-rd-yes(type='radio' name='host' checked)
						label.form-check-label(for='host-rd-yes') Yes
					.form-check.d-inline-block.mx-3
						input.form-check-input#host-rd-no(type='radio' name='host')
						label.form-check-label(for='host-rd-no') No
				br
				label Do you want have a domain?
				br
				.d-block
					.form-check.d-inline-block
						input.form-check-input#domain-rd-yes(type='radio' name='host' checked)
						label.form-check-label(for='domain-rd-yes') Yes
					.form-check.d-inline-block.mx-3
						input.form-check-input#domain-rd-no(type='radio' name='host')
						label.form-check-label(for='domain-rd-no') No
		br
		hr
		.clearfix
			h3.float-right Total Price: 645$
		hr
		.row
			.col-12.col-lg-4.offset-lg-8
				button.w-100.btn.btn-primary.btn.ml-auto.mt-1(type='button') Send
app-footer